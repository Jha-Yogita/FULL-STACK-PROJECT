<% layout('../layouts/boilerplate') %>
<div class="row signup-box justify-content-center align-items-center min-vh-100 mb-4">
    
        <div class="card signup-content shadow-lg border-light mt-2 rounded-lg" style="width: 60rem;">
            <div class="card-body">
                <h1 class="card-title  signup-title text-center text-dark  mb-4" >Signup for WanderLust</h1>
                <form method="post" action="/signup" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input placeholder="Enter your username" name="username" id="username" class="form-control" required>
                        <div class="valid-feedback">Username Looks Good</div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input placeholder="Enter your valid email" name="email" id="email" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid email</div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input placeholder="Enter a good Password" name="password" id="password" class="form-control" required>
                    </div>
                    <button class="btn btn-dark w-100">Submit</button>
                </form>
            </div>
        </div>
    
</div>
<% layout('../layouts/boilerplate') %>
<div class="row login-box justify-content-center align-items-center min-vh-100 mb-4">
    <div class="card login-content shadow-lg border-light mt-2 rounded-lg p-4" style="width: 60rem;">
        <div class="card-body">
            <h1 class="card-title  signup-title text-center text-dark  mb-4">Login to WanderLust</h1>
            <div class="col-6 offset-3">
                <form method="post" action="/login?_method=PUT" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input placeholder="Enter your username" name="username" id="username" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input placeholder="Enter your Password" name="password" id="password" class="form-control" required>
                    </div>
                    <button class="btn btn-dark w-100">Submit</button>
                    <br>
                    <br>
                    <p>Dont have an account? <a href="/signup" style="color: red;">Sign Up</a></p>
                </form>
            </div>
       </div>
    </div>
   
</div>
</div>